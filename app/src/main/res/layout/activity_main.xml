<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Activity.MainActivity">


<!--    android:layout_height="wrap_content"
    android:layout_above="@+id/main_linear2"
    android:layout_below="@+id/main_linear1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    -->
    <!--标题三个布局-->
<LinearLayout
    android:id="@+id/main_linear1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >
    <ImageView
    android:id="@+id/main_title1"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:gravity="center"
    android:background="@drawable/search"/>
    <TextView
        android:id="@+id/main_title2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="95dp"
        android:paddingTop="9dp"
        android:text="ONE"
        android:textSize="27dp"/>
   <ImageView
       android:id="@+id/main_person3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:background="@drawable/individual_center"/>

</LinearLayout>

  <RelativeLayout
      android:id="@+id/main_Refram_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/main_radiogroup"
      android:layout_below="@+id/main_linear1"

      >
      <FrameLayout
          android:id="@+id/main_fram_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </FrameLayout>




  </RelativeLayout>


    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_radio_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/home_click"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_radio_read"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/read_click"/>
        <RadioButton
            android:id="@+id/main_radio_music"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/music_click"/>
        <RadioButton
            android:id="@+id/main_radio_movie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/movie_click"/>
    </RadioGroup>

</RelativeLayout>
