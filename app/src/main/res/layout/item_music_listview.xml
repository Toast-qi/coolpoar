<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/music_liview_imag1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duanpian_yuan"/>
    <TextView
        android:id="@+id/music_listview_author"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="许湛"
        android:textColor="@color/colorblue"/>


    <ImageView
        android:id="@+id/music_image_heart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/music_heart"
        android:layout_marginLeft="180dp"/>
    <TextView
        android:id="@+id/musci_liview_dianzan"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginTop="13dp"
        android:text="451"
        android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/music_liview_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评论内容"
        />
</LinearLayout>