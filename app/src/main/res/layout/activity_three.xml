<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Activity.ThreeActivity">

<ImageView
    android:id="@+id/image_1"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/three_sea"
    />
    <ImageView
        android:id="@+id/img_arrows"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/return_imag"/>
    <ImageView
        android:id="@+id/three_login"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/three_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
       android:text="未登录"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="96dp"/>
    <TextView
        android:id="@+id/person_tv1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="设置"
        android:textSize="15dp"
        android:paddingTop="6dp"
        android:background="@color/colergraiy"
        android:layout_marginTop="170dp"/>
    <LinearLayout
        android:id="@+id/three_linear1"
    android:layout_below="@+id/person_tv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">
        <!--<LinearLayout-->
            <!---->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:orientation="horizontal"-->
            <!--android:background="#000000"-->
            <!--android:gravity="center_vertical"></LinearLayout>-->

        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/three_light"/>
        <TextView
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="     夜间模式"/>

        <CheckBox
            android:button="@null"

            android:background="@drawable/check_click"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_height="1dp"
        android:layout_below="@id/three_linear1"
        android:background="@color/colergraiy"
        />
<LinearLayout
    android:id="@+id/three_linear7"
    android:layout_below="@+id/three_linear1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginTop="19dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/setting"/>
    <TextView
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:textSize="15dp"
        android:text="    其他设置"/>
    <ImageView
        android:id="@+id/home_liner6"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/three_forward"/>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/three_linear7"
        android:background="@color/colergraiy"/>
    <TextView
        android:id="@+id/three_line5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
    android:layout_marginTop="350dp"
        android:textSize="15dp"
        android:background="@color/colergraiy"
        android:text="推荐应用"
        android:paddingTop="5dp"
        />
</RelativeLayout>
